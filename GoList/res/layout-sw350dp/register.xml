<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#007abb" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/logobackgroundgradient" >

            <da.se.otherclasses.LogoView
                android:id="@+id/logoViewRegister"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextRegisterName"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="@string/name"
                android:maxLength="50"
                android:textCursorDrawable="@drawable/cursor" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextRegisterPassword"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textCursorDrawable="@drawable/cursor" />

            <EditText
                android:id="@+id/editTextRegisterRepeatPassword"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="@string/repeatpassword"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textCursorDrawable="@drawable/cursor" />

            <Button
                android:id="@+id/buttonCreateAcc"
                style="@style/btnStyleOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="25dip"
                android:text="@string/register" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>