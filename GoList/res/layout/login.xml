<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@layout/gradient1"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#20000000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.97"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_margin="10dip"
            android:textSize="37sp" />
        
        <ProgressBar
            android:id="@+id/progressBarLogin"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:indeterminateDrawable="@drawable/progressbar3"
            android:interpolator="@android:anim/linear_interpolator"
            android:minHeight="48dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:progressDrawable="@drawable/progressbar3" />

    </LinearLayout>
    
    <EditText
        android:id="@+id/editTextName"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_margin="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/editTextLoginStyle"
        android:background="#FFFFFF"
        android:hint="@string/name"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextPassword"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_margin="15dip"
        style="@style/editTextLoginStyle"
        android:background="#FFFFFF"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        style="@style/btnStyleOrange"
        android:text="@string/login"/>
    
    <Button
        android:id="@+id/buttonRegistrieren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        style="@style/btnStyleOrange"
        android:text="@string/newacc"/>

</LinearLayout>
