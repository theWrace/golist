<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:background="@layout/gradient1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewList"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="0.97"
            android:gravity="center_vertical"
            android:text="@string/list"
            android:ellipsize="marquee" 
    		android:marqueeRepeatLimit="marquee_forever"
    		android:scrollHorizontally="true" 
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="37sp"
            android:textStyle="bold"
            android:focusable="true" 
    		android:focusableInTouchMode="true" 
    		android:freezesText="true" />
        
        <ProgressBar
            android:id="@+id/progressBarList"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:indeterminate="true"
            android:layout_margin="10dp"
            android:indeterminateDrawable="@drawable/progressbar3"
            android:interpolator="@android:anim/linear_interpolator"
            android:progressDrawable="@drawable/progressbar3"
            android:minHeight="48dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonMenu"
            style="@style/btnStyleOrange"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_button1"
            android:padding="20dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewArticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>